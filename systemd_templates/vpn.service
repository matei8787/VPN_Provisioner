[Unit]
Description=VPN Provisioner Service
After=postgres.service redis_docker.service
Requires=postgres.service redis_docker.service
PartOf=dorb.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/services/vpn_provisioner
ExecStart=/usr/bin/docker-compose up --build -d
ExecStop=/usr/bin/docker-compose down -v

[Install]
WantedBy=dorb.target